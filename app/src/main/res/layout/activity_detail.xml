<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.udacity.sandwichclub.DetailActivity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/also_known_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold"
            android:textSize="@dimen/label_text_size"
            android:textColor="@color/labelPrimary"
            android:paddingLeft="@dimen/text_padding_horizontal"
            android:paddingRight="@dimen/text_padding_horizontal"
            android:paddingBottom="@dimen/label_padding_bottom"
            />

        <TextView
            android:id="@+id/also_known_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/labelSecondary"
            android:paddingLeft="@dimen/text_padding_horizontal"
            android:paddingRight="@dimen/text_padding_horizontal"/>

        <TextView
            android:id="@+id/ingredients_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_ingredients_label"
            android:textStyle="bold"
            android:textSize="@dimen/label_text_size"
            android:textColor="@color/labelPrimary"
            android:paddingLeft="@dimen/text_padding_horizontal"
            android:paddingRight="@dimen/text_padding_horizontal"
            android:paddingBottom="@dimen/label_padding_bottom"/>

        <TextView
            android:id="@+id/ingredients_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/labelSecondary"
            android:paddingLeft="@dimen/text_padding_horizontal"
            android:paddingRight="@dimen/text_padding_horizontal"/>

        <TextView
            android:id="@+id/description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_description_label"
            android:textStyle="bold"
            android:textSize="@dimen/label_text_size"
            android:textColor="@color/labelPrimary"
            android:paddingLeft="@dimen/text_padding_horizontal"
            android:paddingRight="@dimen/text_padding_horizontal"
            android:paddingBottom="@dimen/label_padding_bottom"/>

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/labelSecondary"
            android:paddingLeft="@dimen/text_padding_horizontal"
            android:paddingRight="@dimen/text_padding_horizontal"/>

        <TextView
            android:id="@+id/origin_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_place_of_origin_label"
            android:textStyle="bold"
            android:textSize="@dimen/label_text_size"
            android:textColor="@color/labelPrimary"
            android:paddingLeft="@dimen/text_padding_horizontal"
            android:paddingRight="@dimen/text_padding_horizontal"
            android:paddingBottom="@dimen/label_padding_bottom"/>

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/labelSecondary"
            android:paddingLeft="@dimen/text_padding_horizontal"
            android:paddingRight="@dimen/text_padding_horizontal"
            android:paddingBottom="@dimen/label_padding_bottom"/>
    </LinearLayout>
</ScrollView>
